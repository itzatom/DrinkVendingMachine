<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
  <filter-mapping>
    <filter-name>signInFilter</filter-name>
    <url-pattern>/admin/*</url-pattern>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>

  <filter>
    <filter-name>signInFilter</filter-name>
    <filter-class>com.prog3.servlet.filter.SignInFilter</filter-class>
  </filter>


  <servlet-mapping>
    <servlet-name>ClientServlet</servlet-name>
    <url-pattern>/client</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminServlet</servlet-name>
    <url-pattern>/admin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Dispatcher</servlet-name>
    <url-pattern>/submit</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ConfirmServlet</servlet-name>
    <url-pattern>/confirm</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RechargeServlet</servlet-name>
    <url-pattern>/recharge</url-pattern>
  </servlet-mapping>

  <servlet>
    <display-name>client</display-name>
    <servlet-name>ClientServlet</servlet-name>
    <servlet-class>com.prog3.servlet.client.ClientServlet</servlet-class>
  </servlet>
  <servlet>
    <display-name>admin</display-name>
    <servlet-name>AdminServlet</servlet-name>
    <servlet-class>com.prog3.servlet.admin.AdminServlet</servlet-class>
  </servlet>
  <servlet>
    <display-name>submit</display-name>
    <servlet-name>Dispatcher</servlet-name>
    <servlet-class>com.prog3.servlet.Dispatcher</servlet-class>
  </servlet>
  <servlet>
    <display-name>confirm</display-name>
    <servlet-name>ConfirmServlet</servlet-name>
    <servlet-class>com.prog3.servlet.client.ConfirmServlet</servlet-class>
  </servlet>
  <servlet>
    <display-name>recharge</display-name>
    <servlet-name>RechargeServlet</servlet-name>
    <servlet-class>com.prog3.servlet.client.RechargeServlet</servlet-class>
  </servlet>
</web-app>